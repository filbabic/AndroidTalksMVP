<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zerinasalitrezic.mvpandroidtalks">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.notes.NotesActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.add_note.AddNoteActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.add_note.AddNoteMvpActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.notes.NotesMvpActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>